<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mytablayout.thread.ThreadActivity">


    <Button
        android:layout_marginTop="50dp"
        android:id="@+id/thread_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Thread"/>

    <Button
        android:layout_marginTop="50dp"
        android:id="@+id/runnable_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Runnable"/>

    <Button
        android:layout_marginTop="50dp"
        android:id="@+id/callable_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Callable"/>

    <Button
        android:layout_marginTop="50dp"
        android:id="@+id/obtain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="获取当前运行的线程"/>

</LinearLayout>
